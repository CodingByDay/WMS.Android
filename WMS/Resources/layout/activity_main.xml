<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
      >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/rikoMain">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/imglogo"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <View
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:id="@+id/separator"
                android:visibility="visible"
                android:background="@color/rikoMain"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/enter_password"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/tbPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                android:background="@drawable/border"
                android:inputType="textPassword"
                android:breakStrategy="simple"
                android:focusedByDefault="true"
                android:hint="@string/password"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="0.0dp"
                android:id="@+id/progressBar1"
                android:layout_marginTop="20dp"
                android:visibility="invisible"/>

            <Button
                android:background="@drawable/squaredbutton"
                android:textColor="@color/white"
                android:text="@string/log_in"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/btnRegistrationClick"
                android:textSize="18sp"
                android:gravity="center_vertical | center_horizontal"
                android:drawablePadding="2sp"
                android:layout_gravity="center"
                android:layout_marginBottom="60.0dp"
         />
        </LinearLayout>
      

           <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />

       
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="v.1.0.8"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:id="@+id/txtVersion"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
/>

                 <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    >
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:id="@+id/chSlovenian"
                    android:layout_height="wrap_content"


                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:src="@drawable/slovenia"
                        android:id="@+id/imgSlovenian"
                        android:contentDescription="Slovenian" 
                        />
                 </LinearLayout>
                 <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:id="@+id/chEnglish"
                    android:layout_height="wrap_content"


                    >
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:src="@drawable/united_kingdom"
                        android:id="@+id/imgEnglish"
                        android:contentDescription="description" 
                        />
                   </LinearLayout>
                </LinearLayout>

        </LinearLayout>
     
    </LinearLayout>
</LinearLayout> 