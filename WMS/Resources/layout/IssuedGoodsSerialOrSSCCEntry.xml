<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".LinearLayout"
    android:foregroundGravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="@string/s47"
            android:gravity="bottom"
           />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbIdent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sscc-row"
        android:orientation="horizontal"
        android:paddingTop="5dp"
                                     >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/s79"
            android:paddingTop="5dp"
            android:paddingLeft="4dp"
            android:id="@+id/textView1"
            android:gravity="bottom"
             />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tbSSCC" />
 

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serial-row"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="@string/s80"
        />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSerialNum" />

    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serial-date-row"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:text="@string/s361"
        />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbSerialNumDate" />

        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/rikoMain"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:text="@string/s362"
            android:layout_marginTop="0dp"
            android:id="@+id/btSerialDate"
         />

    </LinearLayout>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <TextView
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/s140"
        android:paddingTop="5dp"
        android:paddingLeft="4dp"/>

    <WMS.SearchableSpinner
        android:id="@+id/searchableSpinnerIssueLocation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Spinner
        android:id="@+id/cbMultipleLocations"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        >

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="@string/s40"
            android:id="@+id/lbQty" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbPacking" />

 

    </LinearLayout>
     <TextView
        android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="5dp"
            android:text="@string/s142"
            android:id="@+id/lbPalette" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbPalette" />

    </LinearLayout>

   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_marginBottom="4dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:text="@string/s52"
                android:drawableLeft="@drawable/newitem_white"
                android:id="@+id/btCreateSame"
                 />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="@string/s86"
                android:drawableLeft="@drawable/newitem_white"
                android:id="@+id/btCreate"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:layout_marginBottom="4dp">

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:text="@string/s87"
                android:drawableLeft="@drawable/shipped_white"
                android:id="@+id/btFinish" />

            <Button
                android:layout_weight="1"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:text="@string/s55"
                android:drawableLeft="@drawable/focus_white"
                android:id="@+id/btOverview"
                />

        </LinearLayout>
        <Button
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/s77"
            android:drawableLeft="@drawable/logout_white"
            android:id="@+id/btExit"
       />
    </LinearLayout>
</LinearLayout>