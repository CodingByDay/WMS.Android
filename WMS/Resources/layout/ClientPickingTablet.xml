<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/test"
        android:layout_toRightOf="@id/fling"
        android:layout_below="@id/text"
    />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test"
        android:layout_toRightOf="@id/fling"
        android:id="@+id/listData"
        android:listSelector="@android:drawable/screen_background_dark_transparent"
        android:choiceMode="singleChoice"
        />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/fling"
        android:weightSum="5"
        android:id="@+id/text"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s257"
            android:layout_marginRight="28.0dp"
            android:layout_width="match_parent" />
           <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s102"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
 />
            <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s103"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
 />
           <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s14"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
 />
         <TextView
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s106"
            android:layout_width="match_parent"
            android:layout_marginRight="28.0dp"
 />
     

    


 
 

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="30%"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@id/fling"
        tools:context=".LinearLayout"
        android:foregroundGravity="center"
        android:layout_marginTop="70dp">

    <LinearLayout
          android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"

        >

        <TextView

            android:id="@+id/tbClientField"
            android:text="@string/s101"
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"/>

        <EditText

            android:id="@+id/tbClient"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            />

    </LinearLayout>

    <LinearLayout
          android:layout_width="fill_parent"
       	  android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="2dp">

        <TextView

            android:text="@string/s47"
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp"
            android:id="@+id/tbIdentFilter" />

    </LinearLayout>

    <LinearLayout
          android:layout_width="fill_parent"
       	  android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="2dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/s50"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" />

        <EditText
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbLocationFilter"
            android:layout_weight="0.50"
            android:paddingTop="5dp"
            android:background="@drawable/editText_bg_grey"
            android:layout_marginRight="2dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:textStyle="bold"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s47"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Ident" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s102"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Location" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s103"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Qty" />

        <TextView
            android:textStyle="bold"
            android:layout_weight="25"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/s104"
            android:layout_marginRight="28.0dp"
            android:id="@+id/Name" />

    </LinearLayout>

    <ListView
        android:background="?android:attr/activatedBackgroundIndicator"
        android:choiceMode="singleChoice"
        android:layout_width="match_parent"
        android:id="@+id/ivTrail"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:listSelector="@android:drawable/screen_background_dark_transparent"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:paddingTop="5dp">

            <Button
                android:textSize="20dp"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:text="@string/s107"
                android:drawableLeft="@drawable/confirmation_white"
                android:paddingLeft="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/btConfirm" />

            <Button
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:background="@color/rikoMain"
                android:textColor="@color/white"
                android:text="@string/s108"
                android:drawableLeft="@drawable/focus_white"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btDisplayPositions" />

        </LinearLayout>

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_marginBottom="5dp"
            android:paddingTop="4dp">

         <Button

            android:layout_weight="1"

            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:text="@string/s109"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:drawableLeft="@drawable/left_white"
            android:paddingLeft="10dp"
            android:id="@+id/btBack"
            android:layout_marginTop="0.0dp" />

          <Button
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:background="@color/rikoMain"
            android:textColor="@color/white"
            android:text="@string/s110"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:drawableLeft="@drawable/logout_white"
            android:paddingLeft="10dp"
            android:id="@+id/btLogout"
            android:layout_marginTop="0.0dp" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>